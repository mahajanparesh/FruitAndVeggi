<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dasboard_RL"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:padding="1dp"
    android:background="@drawable/card_view"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/iv_dashboard_item_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/card_view"/>

    <View
        android:id="@+id/view_diver"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_dashboard_item_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_diver"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/dashboard_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/item_value_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dashboard_item_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="â‚¹100.0"
            android:textColor="@color/item_value_text_color"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>